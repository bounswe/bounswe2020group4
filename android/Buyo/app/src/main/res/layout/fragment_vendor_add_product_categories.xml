<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_vendorAddProductCategories_Logo"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_margin="16dp"
        android:contentDescription="@string/logo"
        android:src="@mipmap/logo"
        app:layout_constraintBottom_toTopOf="@+id/rv_vendorAddProductCategories"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_vendorAddProductCategories_Back"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_vendorAddProductCategories_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/buyo_darkCandyAppleRed"
        android:text="Back"
        android:textColor="@color/buyo_white"
        app:layout_constraintBottom_toBottomOf="@+id/iv_vendorAddProductCategories_Logo"
        app:layout_constraintEnd_toStartOf="@+id/iv_vendorAddProductCategories_Logo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_vendorAddProductCategories_Logo" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_vendorAddProductCategories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_vendorAddProductCategories_Logo" />

</androidx.constraintlayout.widget.ConstraintLayout>