<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/default_margin">

    <TextView
        android:id="@+id/tv_message_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Koray"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="7.01.2021"
        app:layout_constraintTop_toTopOf="@+id/tv_message_from"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_message_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Test Message"
        android:textSize="16sp"
        android:layout_marginTop="@dimen/minimum_margin"
        app:layout_constraintTop_toBottomOf="@+id/tv_message_from"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>